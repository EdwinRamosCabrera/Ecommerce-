@model Order

@{
    ViewData["Title"] = "Actualizar Pedido";
}
 
<div class="container">
    <div class="row">
        <div class="col-6">
            <h1 class="text-center">@ViewData["Title"]</h1>
            <form method="post" asp-action="OrderEdit">
                <input type="hidden" asp-for="OrderId" />
                <input type="hidden" asp-for="UserId" />
                <input type="hidden" asp-for="PaymentId" />
                <input type="hidden" asp-for="AmountTotal" />
                <div class="form-group">
                    <label asp-for="Name">Nombres:</label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="LastName">Apellidos:</label>
                    <input asp-for="LastName" class="form-control" />
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Email">Correo:</label>
                    <input asp-for="Email" class="form-control" placeholder="ejemplo@ejemplo.com" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Phone">Telefono:</label>
                    <input asp-for="Phone" class="form-control" placeholder="999999999" maxlength="9" />
                    <span asp-validation-for="Phone" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Address">Direcci√≥n:</label>
                    <input asp-for="Address" class="form-control" placeholder="ejemplo@ejemplo.com" />
                    <span asp-validation-for="Address" class="text-danger"></span>
                </div>
                <div class="form-control">
                    <label asp-for="State">Estado:</label>
                    <select asp-for="State" class="form-select">
                        <option asp-for="State" value="PENDIENTE">Pendiente</option>
                        <option asp-for="State" value="ENTREGADO">Entregado</option>
                        <option asp-for="State" value="CANCELADO">Cancelado</option>
                    </select>
                </div>
                <div class="form-group">
                    <label asp-for="Observations">Observaciones:</label>
                    <textarea asp-for="Observations" class="form-control"></textarea>
                    <span asp-validation-for="Observations" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="AmountTotal">Monto Total:</label>
                    <input asp-for="AmountTotal" class="form-control" disabled />
                </div>
                <br>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary">Actualizar Pedido</button>
                </div>
            </form>
        </div>
        <div class="col-6">
        </div>
    </div>
</div>