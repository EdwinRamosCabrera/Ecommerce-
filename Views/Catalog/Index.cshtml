@model IEnumerable<Product>
@{
    ViewData["Title"] = "CÃ¡talogo de Productos";
}

<div class="container">
  <h1>@ViewData["Mensaje"]</h1>
  <div class="row">
    <div class="col">
        <div id="products" class="mb-3">
            <div class="row">
                @foreach(var item in Model){
                  <div class="col-sm-4">
                    <div class="card mb-3">
                        <div class="card-body">
                          <div class="car-img-actions">
                            <img class="img-responsive" width="96" height="150" src="@item.ProductImage" alt="@item.ProductName"/>
                          </div>
                        </div>
                        <div class="card-body">
                          <h4 class="card-title">@Html.DisplayFor(modelItem => item.ProductName)</h4>
                          <p class="card-text">@Html.DisplayFor(modelItem => item.ProductPrice)</p>
                          <a class="btn btn-primary" asp-action="AddCar" asp-route-id="@item.ProductId">Comprar</a>
                        </div>
                    </div>
                  </div>
                }
            </div>
        </div>
    </div>
  </div>
  <div class="card" style="width:400px">
    <img class="card-img-top" src="../bootstrap4/img_avatar1.png" alt="Card image" style="width:100%">
    <div class="card-body">
      <h4 class="card-title">John Doe</h4>
      <p class="card-text">Some example text some example text. John Doe is an architect and engineer</p>
      <a href="#" class="btn btn-primary">See Profile</a>
    </div>
  </div>
</div>