@model IEnumerable<Product>
@{
    ViewData["Title"] = "CÃ¡talogo de Productos";
}

<div class="container">
  <h1>@ViewData["Mensaje"]</h1>
  <div class="row">
    <div class="col">
        <div id="products" class="mb-3">
            <div class="row">
                @foreach(var item in Model){
                  <div class="col-sm-4">
                    <div class="card mb-3">
                        <div class="card-body">
                          <div class="car-img-actions">
                            <img class="card-img-top img-responsive" src="@item.ProductImage" alt="@item.ProductName" style="width:100%"/>
                          </div>
                        </div>
                        <div class="card-body">
                          <h4 class="card-title">@Html.DisplayFor(modelItem => item.ProductName)</h4>
                          <p class="card-text">S/. @Html.DisplayFor(modelItem => item.ProductPrice)</p>
                          <a class="btn btn-primary" asp-action="AddCar" asp-route-id="@item.ProductId">Comprar</a>
                        </div>
                    </div>
                  </div>
                }
            </div>
        </div>
    </div>
  </div>
</div>