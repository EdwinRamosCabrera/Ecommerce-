@model IEnumerable<Product>
@{
    ViewData["Title"] = "Cátalogo de Productos";
}

<div class="container">
  <h1>@ViewData["Mensaje"]</h1>
  <div class="row">
    <div class="col">
        <div id="products" class="mb-3">
            <div class="row">
                @foreach(var item in Model){
                  <div class="col-sm-4">
                    <div class="card mb-3">
                        <div class="card-body">
                          <div class="car-img-actions">
                            <img class="card-img-top img-responsive" src="@item.Image" alt="@item.Name" style="width:100%"/>
                          </div>
                        </div>
                        <div class="card-body">
                          <h4 class="card-title">@Html.DisplayFor(modelItem => item.Name)</h4>
                          <p class="card-text">S/. @Html.DisplayFor(modelItem => item.Price)</p>
                          <a class="btn btn-primary" asp-action="CatalogCar" asp-route-Id="@item.ProductId">Ver Producto</a>
                          <a class="btn btn-primary" asp-controller="Proforma" asp-action="ProformaAdd" asp-route-id="@item.ProductId">Añadir al carrito</a>
                        </div>
                    </div>
                  </div>
                }
            </div>
        </div>
    </div>
    @ViewData["Menssage"]
  </div>
</div>