@model IEnumerable<Payment>

@{
    ViewData["Title"] = "Lista de Pagos";
}

<h1>@ViewData["Title"]</h1>

<main class="Container text-center">
    @if(!Model.Any() || Model == null){
        <div class="alert alert-warning">
            <p>Aún no se han registrado pagos</p>
        </div>
    }
    else{
        <table class="table table-striped table-responsive">
            <thead>
                <tr>
                    <th>Código</th>
                    <th>Usuario</th>
                    <th>Nombre de Tarjeta</th>
                    <th>Fecha de Pago</th>
                    <th>Monto Total</th>
                    <th>Observaciones</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach(var item in Model){
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.PaymentId)</td>
                        <td>@Html.DisplayFor(modelItem => item.UserId)</td>
                        <td>@Html.DisplayFor(modelItem => item.NameCard)</td>
                        <td>@item.DatePay.AddHours(-5).ToString("dd-MM-yyyy")</td>
                        <td>@Html.DisplayFor(modelItem => item.AmountTotal)</td>
                        <td></td>
                        <td>
                            <a asp-controller="Payment" asp-action="ContactEdit" asp-route-id="@item.PaymentId" class="btn btn-success">Editar</a> 
                        </td>
                        <td>
                            <a asp-controller="Order" asp-action="OrderList" asp-route-id="@item.PaymentId" class="btn btn-primary" >Ver Pedido</a>
                        </td>
                        <td>
                            <a asp-controller="Payment" asp-action="ContactDelete" asp-route-id="@item.PaymentId" class="btn btn-danger">Eliminar</a> 
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
</main>